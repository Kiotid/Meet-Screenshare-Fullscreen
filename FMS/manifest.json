{
    "name": "Fullscreen-Meet-Screenshare",
    "version": "1.0.0",
    "description": "Now you can zoom and maximize the screenshare on Google Meet",
    "manifest_version": 3,
    "author": "Samuele Radici",
    "content_scripts":[
        {
            "matches": ["https://meet.google.com/*"],
            "js": ["inject.js"]
        }
    ],
    "action":{
        "default_popup": "index.html",
        "default_title": "Fullscreen-Meet-Screenshare"
    },
    "permissions": [
        "tabs",
        "activeTab",
        "scripting"
    ],
    "icons": {
        "192": "icon/logo.ico",
        "16": "icon/logo16x16.png",
        "32": "icon/logo32x32.png",
        "48": "icon/logo48x48.png",
        "64": "icon/logo64x64.png",
        "128": "icon/logo128x128.png",
        "256": "icon/logo256x256.png"
    }
    
}
